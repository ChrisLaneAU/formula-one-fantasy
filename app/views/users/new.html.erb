<h1>Sign Up</h1>

<div class="signup">
  <% if @user.errors.any? %>
    <ol>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ol>
  <% end %>

  <%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
    <%= f.label :password %>
    <%= f.password_field :password, :required => true %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true %>
    <%= f.submit "Sign Up", :class => "signup-submit" %>
  <% end %>
</div>
